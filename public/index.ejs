<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Katto - Modern URL Shortener</title>
    
    <!-- SEO Meta Tags -->
    <meta name="description" content="Katto - A modern, secure URL shortener service. Create short, memorable links instantly.">
    <meta name="keywords" content="url shortener, link shortener, short url, katto">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="<%= BASE_URL %>">
    <meta property="og:title" content="Katto - Modern URL Shortener">
    <meta property="og:description" content="Create short, memorable links instantly with our modern URL shortener.">
    <meta property="og:image" content="<%= BASE_URL %>/images/og-image.svg">

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="<%= BASE_URL %>">
    <meta property="twitter:title" content="Katto - Modern URL Shortener">
    <meta property="twitter:description" content="Create short, memorable links instantly with our modern URL shortener.">
    <meta property="twitter:image" content="<%= BASE_URL %>/images/og-image.svg">

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
    <link rel="alternate icon" type="image/png" href="/images/favicon.png">
    
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <header>
        <a href="/" class="logo-link">
            <img src="/logo.svg" alt="Katto URL Shortener" class="logo">
        </a>
        <div class="auth-buttons">
            <button id="loginBtn" class="btn btn-primary">Login</button>
            <button id="registerBtn" class="btn btn-secondary">Register</button>
            <button id="logoutBtn" class="btn btn-secondary" style="display: none;">Logout</button>
        </div>
    </header>

    <div class="container">
        <main class="main-content">
            <div class="hero">
                <h1>Shorten Your Links</h1>
                <p>Create short, memorable links that redirect to your long URLs</p>
            </div>

            <div class="url-form card">
                <div class="input-group">
                    <i class="fas fa-globe"></i>
                    <input type="url" id="originalUrl" placeholder="Paste your long URL here" required>
                </div>
                <div class="options-row">
                    <div class="input-group">
                        <i class="fas fa-tag"></i>
                        <input type="text" id="customCode" placeholder="Custom alias (optional)">
                    </div>
                    <div id="expirationOptions" class="input-group" style="display: none;">
                        <i class="fas fa-clock"></i>
                        <select id="expirationSelect">
                            <option value="">Default (30 days)</option>
                            <option value="1d">1 day</option>
                            <option value="7d">7 days</option>
                            <option value="30d">30 days</option>
                            <option value="90d">90 days</option>
                            <option value="1y">1 year</option>
                        </select>
                    </div>
                </div>
                <button id="shortenButton" class="btn btn-primary">
                    <i class="fas fa-cut"></i>
                    Shorten URL
                </button>
            </div>

            <div id="result" class="result card" style="display: none;">
                <div class="result-header">
                    <h3>Your Shortened URL</h3>
                    <button id="copyButton" class="btn btn-icon" title="Copy to clipboard">
                        <i class="fas fa-copy"></i>
                    </button>
                </div>
                <div class="result-content">
                    <input type="text" id="shortenedUrl" readonly>
                    <div class="url-info">
                        <div class="info-item">
                            <i class="fas fa-link"></i>
                            <span>Original URL: </span>
                            <span id="originalUrlDisplay" class="value"></span>
                        </div>
                        <div class="info-item">
                            <i class="fas fa-calendar"></i>
                            <span>Expires: </span>
                            <span id="expiresAt" class="value"></span>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <footer class="footer">
            <p>Â© <%= new Date().getFullYear() %> Katto. All rights reserved.</p>
        </footer>

        <div id="message" class="message"></div>
    </div>

    <!-- Login Modal -->
    <div id="loginModal" class="modal-overlay">
        <div class="modal">
            <button class="modal-close" id="closeLoginModal">
                <i class="fas fa-times"></i>
            </button>
            <h2 class="modal-title">Login to Your Account</h2>
            <form id="loginForm">
                <div class="form-group">
                    <label for="loginEmail">Email</label>
                    <input type="email" id="loginEmail" required>
                </div>
                <div class="form-group">
                    <label for="loginPassword">Password</label>
                    <input type="password" id="loginPassword" required>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>

    <!-- Register Modal -->
    <div id="registerModal" class="modal-overlay">
        <div class="modal">
            <button class="modal-close" id="closeRegisterModal">
                <i class="fas fa-times"></i>
            </button>
            <h2 class="modal-title">Create an Account</h2>
            <form id="registerForm">
                <div class="form-group">
                    <label for="registerEmail">Email</label>
                    <input type="email" id="registerEmail" required>
                </div>
                <div class="form-group">
                    <label for="registerPassword">Password</label>
                    <input type="password" id="registerPassword" required>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
        </div>
    </div>

    <script>
        window.BASE_URL = '<%= BASE_URL %>';
    </script>
    <script src="/script.js"></script>
</body>
</html> 